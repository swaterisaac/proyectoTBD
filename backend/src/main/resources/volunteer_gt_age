
--Versión antigua
CREATE OR REPLACE FUNCTION public.volunteer_gt_age(IN entryage integer DEFAULT 200)
    RETURNS bigint
    LANGUAGE 'sql'
    VOLATILE

    COST 100
AS $BODY$
SELECT COUNT(*)
FROM volunteers v
INNER JOIN users u
ON v.id = u.id
WHERE u.age >= entryage AND v.deleted = false;
$BODY$;


--Versión nueva

CREATE FUNCTION public.volunteer_gt_age(IN entryage integer DEFAULT 200, IN emid bigint DEFAULT 1)
    RETURNS bigint
    LANGUAGE 'sql'

AS $BODY$
SELECT COUNT(*)
FROM volunteers v,users u, emergencies e, status s, rankings r, tasks ta

WHERE u.age >= entryage AND v.deleted = false
AND e.id = emid AND e.id_status = s.id AND s.description = 'Activo'
AND emid = ta.id_emergency
AND ta.id = r.id_task AND r.id_volunteer = v.id
AND v.id = u.id;
$BODY$;

ALTER FUNCTION public.volunteer_gt_age(integer, bigint)
    OWNER TO tbd;




--consulta de funcion
SELECT COUNT(*)
FROM volunteers v,users u, emergencies e, status s, rankings r, tasks ta

WHERE u.age >= entryage AND v.deleted = false
AND e.id = emid AND e.id_status = s.id AND s.description = 'Activo' --La emergencia e.id_status puede ser directamente = 1 ya que ese es fijo 'activo'
AND emid = ta.id_emergency
AND ta.id = r.id_task AND r.id_volunteer = v.id
AND v.id = u.id;


--consulta servicio REST
SELECT COUNT(*),ta.name
FROM volunteers v,users u, emergencies e, status s, rankings r, tasks ta

WHERE u.age >= entryage AND v.deleted = false
AND e.id = emid AND e.id_status = s.id AND s.description = 'Activo' --La emergencia e.id_status puede ser directamente = 1 ya que ese es fijo 'activo'
AND emid = ta.id_emergency
AND ta.id = r.id_task AND r.id_volunteer = v.id
AND v.id = u.id
GROUP BY ta.name ORDER BY ta.name ASC;